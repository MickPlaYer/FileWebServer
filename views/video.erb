<html>
  <head>
    <title><%= File.basename(path) %></title>
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="<%= static_url('/3.4.7/plyr.css') %>">
    <script src="<%= static_url('/3.4.7/plyr.js') %>"></script>
    <style type="text/css">
      body {
        margin: 0px;
        font-family: "Lucida Grande", Calibri,Arial;
        color: #777;
        background-color: rgb(0, 0, 0);
      }
      a {
        color: #777;
        font-weight: bold;
        text-decoration: none;
      }
      video {
        width: 100%;
        display: block;
      }
      .container {
        max-width: 1280px;
        padding: 0 15px;
        margin: auto;
      }
    </style>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        new Plyr('#player', {
          keyboard: { global: true },
          speed: { selected: 1, options: [0.5, 1, 1.5, 2] }
        })
      })
    </script>
  </head>
  <body>
    <div class="container">
      <h1><%= File.basename(path) %></h1>
      <div class="row">
        <video id="player" controls autoplay poster="<%= static_url('/background.png') %>">
          <source src="<%= app_url('/__file__' + path) %>" type="video/mp4">
        </video>
      </div>
      <div>
        <a href="<%= app_url(path) %>/..">Back</a>
      </div>
    </div>
  </body>
</html>
